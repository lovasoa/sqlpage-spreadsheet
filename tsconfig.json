{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@univerjs/*": ["node_modules/@univerjs/*/lib/types"]
		},
		"skipLibCheck": true,
		"noEmit": true,
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "Bundler",
		"module": "esnext",
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
